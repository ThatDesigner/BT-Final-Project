public class Cover implements Thing{
  private int x;
  private int y;
  private int width;
  private int height;
  private int health = 10;
  
  public Player(int x, int y, int w, int h){
    this.x=x;
    this.y=y;
    this.width = w;
    this.height = h;
  }
  
  public int[] boundingBox(){
    return new int[]{x-width/2, y+height/2, x+width/2, y-height/2}
  }
  
  public void draw(){
  }
  
  public void act(){
    
  }
  
  public void loseHealth(){
    health--;
  }
  
  public int getHealth(){
    return health;
  }
  
  public int getX(){
    return this.x;
  }
  
  public int getY(){
    return this.y;
  }
}
