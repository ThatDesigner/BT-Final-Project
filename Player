public class Player implements Thing{
  
  private int x;
  private int y;
  private int width;
  private int height;
  private int command;
  
  public Player(int x, int y, int w, int h){
    this.x=x;
    this.y=y;
    this.width = w;
    this.height = h;
    command = "stay";
  }
  
  public int[] boundingBox(){
    return new int[]{x-width/2, y-height/2, x+width/2, y+height/2}
  }
  
  public void draw(){
  
  }
  
  public void act(){
    if(command.equals("stay"){  
    } else if (command.equals("moveRight"){
      x+=5;
    } else if (command.equals("moveLeft"){
      x-=5;
    }
    
    
  }
  
  public void setAct(String comamnd){
    this.command = command;
  }
  
}
